                                                </Grid>
                                            </StackLayout>
                                        </Frame>





                                        <Frame BackgroundColor="#f2f2f2" HasShadow="True" BorderColor="#e6e6e6">
                                            <StackLayout Orientation="Horizontal">
                                                <Image x:Name="formssToggleImage" Source="RoundedAddIcon.png" HeightRequest="35" WidthRequest="35" VerticalOptions="Start" HorizontalOptions="Start">
                                                </Image>
                                                <Label Text="Wall Function" Margin="10,0,0,0" FontSize="Large" TextColor="Black" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">

                                                </Label>
                                            </StackLayout>
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding ToggleCommand}" CommandParameter="{x:Reference FormssDLayout}"/>
                                                <TapGestureRecognizer Command="{Binding ToggleCommand}" CommandParameter="{x:Reference formssToggleImage}"/>
                                            </Frame.GestureRecognizers>
                                        </Frame>

