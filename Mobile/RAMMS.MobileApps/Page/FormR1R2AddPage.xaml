                                                <TapGestureRecognizer Command="{Binding ToggleCommand}" CommandParameter="{x:Reference Formss1DLayout}"/>
                                                <TapGestureRecognizer Command="{Binding ToggleCommand}" CommandParameter="{x:Reference formss1ToggleImage}"/>
                                            </Frame.GestureRecognizers>
                                        </Frame>

