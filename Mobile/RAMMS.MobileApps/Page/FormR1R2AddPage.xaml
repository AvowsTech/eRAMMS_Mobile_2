                                                                <x:String>F2 - Bridge Wall</x:String>
                                                                <x:String>F3 - Cut Wall</x:String>
                                                                <x:String>F4 - Switchback Wall</x:String>
                                                                <x:String>F5 - Head Wall</x:String>
                                                                <x:String>F6- Stope Protection</x:String>
                                                                <x:String>F7 - Flood Wall</x:String>
                                                                <x:String>F8 - Others</x:String>
                                                            </local:ExtendedPicker.Items>
                                                        </local:ExtendedPicker>
                                                    </locals:FrameRenders>
                                                </Grid>
                                            </StackLayout>
                                        </Frame>






